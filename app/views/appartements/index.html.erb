<div class="container-search-bar d-flex">
  <%= form_tag appartements_path, method: :get do %>

    <div class=" mb-2">
      <%= text_field_tag :location,
      params[:location],
      class: "form-control",
      placeholder: "Select a location..."
        %>
    </div>

    <div class=" mb-2">
      <%= text_field_tag :budget,
      params[:budget],
      class: "form-control",
      placeholder: "Budget maximum..."
      %>
    </div>


     <select class="select2" name="actabilite" style="width: 100%" style="height: 20px">
      <% Appartement::ACTABILITE.each do |actabilite| %>
        <option></option>
        <option value=<%= actabilite %> <%= "selected" if params[:actabilite] == actabilite %>>
          <%= actabilite %>
        </option>
      <% end %>
    </select>

     <select class="select2" name="livraison" style="width: 100%">
      <% Appartement::LIVRAISON.each do |livraison| %>
        <option></option>
        <option value=<%=livraison.gsub(" ","-")%> <%= "selected" if params[:livraison] == livraison.gsub(" ", "-") %>>
          <%= livraison %>
        </option>
      <% end %>
    </select>

     <select class="select2" name="piece[]" multiple style="width: 100%">
      <% Appartement::PIECES.each do |piece| %>
        <option></option>
        <option value=<%=piece%> <%= "selected" if params[:piece] && params[:piece].include?(piece) %>>
          <%= piece %>
        </option>
      <% end %>
    </select>


    <%= submit_tag "Filtrer", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>



