<div class="container-index">
  <div class="d-flex">

    <div class="left-side">
      <div class="container-card">
      <% @appartements.each do |appartement|%> 
        <div class="card-product" data-toggle="collapse" href="#card-details" role="button" aria-expanded="false" aria-controls="card-details">
          <img src="https://res.cloudinary.com/agazielly/image/upload/v1567001328/download_bgcvkj.jpg"/>
          <div class="card-product-infos d-flex ml-3">
            
           <%= render 'appartements/card_content',appartement:appartement %>
            
          </div>
        </div>

        <div class="container-appartement-show collapse" id="card-details">
          <ul class="nav nav-tabs">
            <li class="nav-item">
              <a href="#synthese" class="nav-link active" data-toggle="tab">Synth√®se</a>
            </li>
            <li class="nav-item">
              <a href="#scoring" class="nav-link" data-toggle="tab">Scoring</a>
            </li>
            <li class="nav-item">
              <a href="#documents" class="nav-link" data-toggle="tab">Documents</a>
            </li>
          </ul>

          <div class="tab-content">
            <div class="tab-pane fade show active" id="synthese">
              <p>Synthese tab content ...</p>
            </div>
            <div class="tab-pane fade" id="scoring">
              <p>Scoring tab content ...</p>
            </div>
            <div class="tab-pane fade" id="documents">
              <p>Documents tab content ...</p>
            </div>
          </div>
        </div>

      <% end %>
      </div>
    </div>

    <div class="right-side">
      <div
        id="map"
        style="width: 100%; height: 600px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>