<div>
  <% if current_user.selections.where(appartement_id: appartement.id) == []%>
    <%= link_to appartement_selections_path(appartement), remote: true, method: :post do %>
        <input type="checkbox" id="toggle" class="checkbox" />
        <label for="toggle" class="switch"></label>
      <% end %>
    <% else %>
      <%= link_to selection_path(current_user.selections.where(appartement_id: appartement.id)[0]), remote: true, method: :delete do %>
        <input type="checkbox" id="toggle" class="checkbox" checked />
        <label for="toggle" class="switch"></label>
      <% end %>
    <% end %>
</div>
